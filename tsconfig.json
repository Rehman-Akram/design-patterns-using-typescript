{
  "compilerOptions": {
    "target": "ES2023",                                  
    "module": "CommonJS",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "noImplicitAny": true,                            
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./typescript",
    "baseUrl": "./",
    "paths": {
      "*": ["typescript/*"]
    }
  },
  "include": ["typescript/**/*"],
  "exclude": ["node_modules", "dist"]
}
