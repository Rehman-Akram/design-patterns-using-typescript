{
  "compilerOptions": {
    "target": "ES2023",                                  
    "module": "ESNext",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "noImplicitAny": true,                            
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./typescript",
  },
  "include": ["typescript/**/*"],
  "exclude": ["node_modules", "dist"]
}
